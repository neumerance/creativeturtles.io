  </head>

  <body class="has-background-light">
    <%= render partial: "frontend/shared/nav_bar" %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield :header %>
    <%= yield %>
    <%= yield :footer %>
  </body>
